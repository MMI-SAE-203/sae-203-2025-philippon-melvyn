---
import pb from "../../js/backend.mjs";
import Layout from "../../layouts/Layout.astro";
import CardActivite from "../../components/CardActivite.astro";

const Activites = await pb.collection("Activites").getFullList();
---

<Layout title="Programme des Activités">
    <h1 class="text-3xl font-bold mb-6">Liste des activités</h1>

    <div
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6"
    >
        {Activites.map((Activites) => <CardActivite Activites={Activites} />)}
    </div>
</Layout>

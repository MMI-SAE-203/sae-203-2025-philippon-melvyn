---
import {
    inviteById,
    getFilmsByInviteId,
    getActivitesByInviteId,
} from "../services/pocketbase";

const { id } = Astro.params;

const invite = await inviteById(id);

const films = await getFilmsByInviteId(id);
const activites = await getActivitesByInviteId(id);
---

<!doctype html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Détails de l'Invité</title>
        <link
            href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
            rel="stylesheet"
        />
    </head>
    <body class="bg-gray-100">
        <div class="container mx-auto p-6">
            <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
                <div class="flex items-center gap-6">
                    <img
                        src={invite.photo}
                        alt="Photo de l'invité"
                        class="w-32 h-32 object-cover rounded-full border-4 border-yellow-500"
                    />
                    <div>
                        <h1 class="text-3xl font-semibold text-gray-900">
                            {invite.nom}
                            {invite.prenom}
                        </h1>
                        <p class="text-xl text-gray-600">{invite.role}</p>
                        <p class="mt-2 text-gray-800">{invite.biographie}</p>
                        <p class="mt-2 text-gray-600">
                            Email: <a
                                href={`mailto:${invite.email}`}
                                class="text-blue-500">{invite.email}</a>
                        </p>
                    </div>
                </div>
            </div>

            {
                films.length > 0 && (
                    <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
                        <h2 class="text-2xl font-semibold text-gray-900 mb-4">
                            Films Associés
                        </h2>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                            {films.map((film) => (
                                <div
                                    key={film.id}
                                    class="bg-gray-50 rounded-lg shadow-md p-4"
                                >
                                    <img
                                        src={getImageUrl(film, "Affiche")}
                                        alt={film.titre}
                                        class="w-full h-48 object-cover rounded-lg mb-4"
                                    />
                                    <h3 class="text-xl font-semibold text-gray-800">
                                        {film.titre}
                                    </h3>
                                    <p class="text-gray-600 mt-2">
                                        {film.description}
                                    </p>
                                </div>
                            ))}
                        </div>
                    </div>
                )
            }

            {
                activites.length > 0 && (
                    <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
                        <h2 class="text-2xl font-semibold text-gray-900 mb-4">
                            Activités Associées
                        </h2>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                            {activites.map((activite) => (
                                <div
                                    key={activite.id}
                                    class="bg-gray-50 rounded-lg shadow-md p-4"
                                >
                                    <h3 class="text-xl font-semibold text-gray-800">
                                        {activite.titre}
                                    </h3>
                                    <p class="text-gray-600 mt-2">
                                        {activite.description}
                                    </p>
                                    <p class="text-gray-500 mt-2">
                                        {activite.date_activité}
                                    </p>
                                </div>
                            ))}
                        </div>
                    </div>
                )
            }
        </div>
    </body>
</html>

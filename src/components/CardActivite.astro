---
import { getImageUrl } from "../js/backend.mjs";
const { Activites } = Astro.props;
const AfficheUrl = getImageUrl(Activites, "image");
---

<div class="flex flex-wrap gap-6 justify-center">
    <a
        href={`/activites/${Activites.id}`}
        class="group relative w-72 bg-white rounded-lg shadow-md overflow-hidden transform transition-all hover:scale-105 hover:shadow-2xl"
    >
        <div class="relative">
            <img
                src={`http://127.0.0.1:8090/api/files/Activites/${Activites.id}/${Activites.Affiche_sportive}`}
                alt={Activites.Titre}
                class="w-full h-48 object-cover"
                loading="lazy"
            />
            <div
                class="absolute inset-0 bg-gradient-to-b from-black/50 to-transparent"
            >
            </div>
        </div>
        <div class="p-5">
            <h2 class="text-lg font-bold text-gray-900">{Activites.Titre}</h2>
            <p class="text-gray-600 text-sm mt-2 line-clamp-2">
                {Activites.Description}
            </p>
            <a
                href={`/activites/${Activites.id}`}
                class="block mt-3 text-orange-600 font-medium hover:text-orange-800 transition duration-200"
            >
                En savoir plus â†’
            </a>
        </div>
    </a>
</div>

---
import { getImageUrl } from "../js/backend.mjs";
const { film } = Astro.props;
const AfficheUrl = getImageUrl(film, "image");
---

<a
    href={`/film/${film.id}`}
    class="relative block overflow-hidden rounded-lg shadow-lg transition-transform transform hover:scale-105"
>
    <div class="relative">
        <img
            src={`http://127.0.0.1:8090/api/files/film/${film.id}/${film.Affiche}`}
            alt={film.Titre}
            class="w-full h-48 object-cover"
            loading="lazy"
        />
        <div
            class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/40 to-transparent"
        >
        </div>
        <h2 class="absolute bottom-4 left-4 text-lg font-semibold text-white">
            {film.Titre}
        </h2>
    </div>
    <div class="p-4 bg-white">
        <p class="text-gray-600 text-sm mt-1 line-clamp-3">Voir les d√©tails</p>
    </div>
</a>

---
import { getImageUrl } from "../js/backend.mjs";
const { Inviter } = Astro.props;
const AfficheUrl = getImageUrl(Inviter, "image");
---

<a
    href={`/Inviter/${Inviter.id}`}
    class="block bg-white rounded-lg shadow-md overflow-hidden transform transition-all hover:scale-105 hover:shadow-lg"
>
    <img
        src={`http://127.0.0.1:8090/api/files/Inviter/${Inviter.id}/${Inviter.photo}`}
        alt={Inviter.NomPrenom}
        class="w-full h-48 object-cover"
        loading="lazy"
    />
    <div class="p-4 text-center">
        <h2 class="text-lg font-bold text-gray-900">{Inviter.NomPrenom}</h2>
        <p class="text-gray-600 text-sm mt-2 line-clamp-3">
            {Inviter.biographie}
        </p>
        <a
            href={`/inviter/${Inviter.id}`}
            class="mt-3 inline-block text-orange-600 font-semibold hover:text-orange-800 transition duration-200"
        >

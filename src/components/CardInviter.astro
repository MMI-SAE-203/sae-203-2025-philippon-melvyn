---
import { getImageUrl } from "../js/backend.mjs";
const { Inviter } = Astro.props;
const AfficheUrl = getImageUrl(Inviter, "image");
---
<a
    href={`/Inviter/${Inviter.id}`}
    class="relative block bg-white rounded-lg shadow-md overflow-hidden transform transition-all hover:scale-105 hover:shadow-2xl"
>
    <div class="relative w-full h-40">
        <img
            src={`http://127.0.0.1:8090/api/files/Inviter/${Inviter.id}/${Inviter.photo}`}
            alt={Inviter.NomPrenom}
            class="w-full h-48 object-cover"
            loading="lazy"
        />
        <div class="absolute inset-0 bg-black/40"></div>
    </div>

    <div class="relative -mt-10 p-5 bg-white rounded-t-2xl shadow-md">
        <h2 class="text-lg font-bold text-gray-900 text-center">
            {Inviter.NomPrenom}
        </h2>
        <p class="text-gray-600 text-sm mt-2 text-center line-clamp-3">
            {Inviter.biographie}
        </p>
        <div class="mt-3 text-center">
            <a
                href={`/inviter/${Inviter.id}`}
                class="inline-block text-orange-600 font-medium hover:text-orange-800 transition duration-200"

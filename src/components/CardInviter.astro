---
import { getImageUrl } from "../js/backend.mjs";
const { Inviter } = Astro.props;
const AfficheUrl = getImageUrl(Inviter, "image");
---

<a
    href={`/Inviter/${Inviter.id}`}
    class="block bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300"
>
    <img
        src={`http://127.0.0.1:8090/api/files/Inviter/${Inviter.id}/${Inviter.photo}`}
        alt={Inviter.NomPrenom}
        class="w-full h-48 object-cover"
        loading="lazy"
    />

    <div class="p-4">
        <h2 class="text-xl font-semibold">{Inviter.NomPrenom}</h2>
        <p class="text-gray-600 text-sm mt-2 line-clamp-3">
            {Inviter.biographie}
        </p>
    </div>
</a>
